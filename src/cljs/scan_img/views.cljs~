(ns scan-img.views
  (:require
   [re-frame.core :as rf]
   [scan-img.subs :as subs]))


(defn name-field
  []
  [:div
   "Title: "
   [:input {:type "text"
            :value @(rf/subscribe [::subs/name])
            :on-change #(rf/dispatch [:name-change (-> %
                                                      .-target
                                                      .-value)])}]])

(defn main-panel
  []
  (let [name (rf/subscribe [::subs/name])]
    [:div
     [:h1 "Remote Task Executer: " @name]
     [:hr]
     [name-field]]))
